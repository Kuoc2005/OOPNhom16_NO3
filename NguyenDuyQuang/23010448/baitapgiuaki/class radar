// Tạo lớp Radar để phân tích tín hiệu
class Radar {
    // Công thức phân tích tín hiệu rời rạc X(n) = 1 - n/15 với 0 <= n <= 15
    public double analyzeDiscreteSignal(int n) {
        if (n >= 0 && n <= 15) {
            return 1 - (n / 15.0);
        } else {
            return 0; // Nếu n ngoài khoảng [0, 15]
        }
    }

    public static void main(String[] args) {
        // Tạo đối tượng Radar
        Radar radar = new Radar();

        // Tính và in kết quả tín hiệu với n = 4
        int n = 4;
        double result = radar.analyzeDiscreteSignal(n);
        System.out.println("Kết quả tín hiệu rời rạc X(n) tại n = " + n + ": " + result);

        // Khởi tạo tín hiệu rời rạc
        int[] xValues = {1, 2, 3, 4}; // Ví dụ một dãy tín hiệu x(k)
        DiscreteSignal discreteSignal = new DiscreteSignal(5.0, 1000.0, xValues);

        // In kết quả tín hiệu rời rạc cho n = 4
        discreteSignal.printSignal(n);
    }
}
